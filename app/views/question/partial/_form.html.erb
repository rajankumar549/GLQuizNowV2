<p><%=@error_msg %></p>
<form class="col-sm-12" action="<%= action %>" method="post" >
  <div class="form-group row">
    <label for="question_stmt" class="col-sm-2 col-form-label" >Question Statement</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="question_stmt" id="question_stmt" aria-describedby="question_stmt_help" value="<%= question_info.statement %>"required>
      <small id="question_stmt_help" class="form-text text-muted"></small>
    </div>
  </div>

  <div class="form-group row">
    <label for="option_1" class="col-sm-2 col-form-label" >Option 1</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="options[]" id="option_1" aria-describedby="option1_help" value="<%= question_info.options[0] if question_info.options != nil && question_info.options.length > 0 %>" required>
      <small id="option_1_help" class="form-text text-muted"></small>
    </div>
  </div>
  <div class="form-group row">
    <label for="option_2" class="col-sm-2 col-form-label" >Option 2</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="options[]" id="option_2" value="<%= question_info.options[1] if question_info.options != nil && question_info.options.length > 1 %>" aria-describedby="option_2_help" required>
      <small id="option_2_help" class="form-text text-muted"></small>
    </div>
  </div>
  <div class="form-group row">
    <label for="option_3" class="col-sm-2 col-form-label" >Option 3</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="options[]" id="option_3" value="<%= question_info.options[2] if question_info.options != nil && question_info.options.length > 2 %>" aria-describedby="option_3_help" required>
      <small id="option_3_help" class="form-text text-muted"></small>
    </div>
  </div>
  <div class="form-group row">
    <label for="option_4" class="col-sm-2 col-form-label" >Option 4</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="options[]" id="option_4" value="<%= question_info.options[3] if question_info.options != nil && question_info.options.length > 3 %>" aria-describedby="option_4_help" required>
      <small id="option_4_help" class="form-text text-muted"></small>
    </div>
  </div>
  <div class="form-group row">
    <label for="weightage" class="col-sm-2 col-form-label" >Weightage</label>
    <div class="col-sm-10">
      <input type="number" min="1" max="5" step="0.25" name="weightage" value="<%= question_info ? question_info.weightage : "1" %>" class="form-control" id="weightage" aria-describedby="weightage_help" required>
      <small id="weightage_help" class="form-text text-muted"></small>
    </div>
  </div>

  <div class="form-group row">
    <label for="correct_option" class="col-sm-2 col-form-label" >Correct Option</label>
    <div class="col-sm-10">
      <select class="form-control" name="correct_option" id="correct_option">
        <option default value="1"  <%="selected" if question_info.correct == "1"%> >1</option>
        <option value="2"  <%="selected" if question_info.correct == "2"%> >2</option>
        <option value="3"  <%="selected" if question_info.correct == "3"%> >3</option>
        <option value="4"  <%="selected" if question_info.correct == "4"%> >4</option>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <label for="status" class="col-sm-2 col-form-label" >Status</label>
    <div class="col-sm-10">
      <select class="form-control" name="status" id="status" value="<%= question_info.status.to_s %>" >
        <option default value="true" <%="selected" if question_info.status%> >Enabled</option>
        <option value="false" <%="selected" unless question_info.status%> >Disabled</option>
      </select>
    </div>
  </div>
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
  <button type="submit" class="btn btn-primary">Submit</button>
</form>