<h1 class="center">
  All Questions
  <a href="/question/new" class="btn btn-success btn-sm" tabindex="-1" role="button" aria-disabled="true">Add New</a>
</h1>

<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th scope="col"># id</th>
        <th scope="col">Question Statment</th>
        <th scope="col">Weightage</th>
        <th scope="col">Status</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @all_questions.each do |q| %>
      <tr>
        <th scope="row"><%= q[:id] %></th>
        <td><%= q[:statement] %></td>
        <td><%= render_pill_badges(q[:weightage]).html_safe%></td>
        <td><%= render_pill_badges(q[:status]).html_safe %></td>
        <td><a href="#" class="btn btn-danger btn-sm" tabindex="-1" role="button" aria-disabled="true">Delete</a></td>
        <td><a href="edit/<%= q[:id] %>" class="btn btn-danger btn-sm" tabindex="-1" role="button" aria-disabled="true">Edit</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>